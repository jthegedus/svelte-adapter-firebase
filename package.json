{
  "name": "@jthegedus/svelte-adapter-firebase",
  "description": "Adapter for Svelte apps that integrates a firebase website with Cloud Functions or Cloud Run for server side rendering.",
  "main": "dist/index.js",
  "version": "0.1.0",
  "dependencies": {
    "@sveltejs/app-utils": "1.0.0-next.0"
  },
  "devDependencies": {
    "ava": "^3.14.0",
    "joi": "^17.3.0",
    "rewire": "^5.0.0",
    "rollup": "^2.32.0",
    "rome": "10.0.4-beta"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "rome check src/index.js tests/index.test.js",
    "test:unit": "ava",
    "dev": "rollup --watch --config rollup.config.mjs",
    "build": "rollup --config rollup.config.mjs && cp src/files/cloud_run_package.json dist/files/package.json",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
